{
  "name": "Bookmarks",
  "identifier": "com.wyattowalsh.iina-plugin-bookmarks",
  "version": "1.0.0",
  "description": "iina plugin for user-friendly media bookmark management that allows users to easily add, edit, and organize bookmarks within their media player.",
  "author": {
    "name": "Wyatt Walsh",
    "email": "wyattowalsh@gmail.com",
    "url": "https://w4w.dev"
  },
  "entry": "index.js",
  "permissions": [
    "show-osd",
    "video-overlay",
    "file-system",
    "internet-access"
  ],
  "sidebarTab": {
    "name": "Bookmarks",
    "file": "ui/sidebar/index.html"
  },

  "preferencesPage": "preferences.html",
  "allowedDomains": ["*"],
  "preferenceDefaults": {
    "autoSave": true,
    "showTimestamps": true,
    "defaultSortBy": "timestamp",
    "maxBookmarks": 1000,
    "cloudBackupEnabled": false,
    "cloudProvider": "gdrive",
    "autoReconcileFiles": true
  }
}