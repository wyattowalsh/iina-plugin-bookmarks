{
  "name": "iina-plugin-bookmarks",
  "version": "1.0.0",
  "description": "IINA plugin for user-friendly media bookmark management",
  "main": "src/index-modern.ts",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "serve-window": "parcel serve ui/window/index.html --dist-dir dist/ui/window",
    "serve-sidebar": "parcel serve ui/sidebar/index.html --dist-dir dist/ui/sidebar",
    "serve-overlay": "parcel serve ui/overlay/index.html --dist-dir dist/ui/overlay",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && parcel build --target window --target overlay --target sidebar",
    "build:dev": "rm -rf dist && tsc --project tsconfig.build.json && parcel build --target window --target overlay --target sidebar --no-optimize",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'ui/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' 'ui/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{ts,tsx,scss,json,md}'",
    "format:check": "prettier --check '**/*.{ts,tsx,scss,json,md}'",
    "package": "make package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@parcel/config-default": "~2.16.0",
    "@parcel/core": "~2.16.0",
    "@parcel/transformer-js": "~2.16.0",
    "@parcel/transformer-sass": "~2.16.0",
    "@parcel/transformer-typescript-types": "~2.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.0",
    "iina-plugin-definition": "^0.99.3",
    "jsdom": "^24.1.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.0",
    "process": "^0.11.10",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.24.0",
    "parcel": "~2.16.0",
    "parcel-optimizer-webview": "git+https://github.com/iina/parcel-optimizer-webview.git",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": "safari >= 14",
  "targets": {
    "main": false,
    "window": {
      "distDir": "./dist/ui/window",
      "source": "ui/window/index.html",
      "publicUrl": "./"
    },
    "overlay": {
      "distDir": "./dist/ui/overlay",
      "source": "ui/overlay/index.html",
      "publicUrl": "./"
    },
    "sidebar": {
      "distDir": "./dist/ui/sidebar",
      "source": "ui/sidebar/index.html",
      "publicUrl": "./"
    }
  }
}
