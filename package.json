{
  "name": "iina-plugin-bookmarks",
  "version": "1.0.0",
  "description": "IINA plugin for user-friendly media bookmark management",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "serve-window": "parcel serve ui/window/index.html --dist-dir dist/ui/window --port 1236",
    "serve-sidebar": "parcel serve ui/sidebar/index.html --dist-dir dist/ui/sidebar --port 1234",
    "serve-overlay": "parcel serve ui/overlay/index.html --dist-dir dist/ui/overlay --port 1235",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && parcel build --target window --target overlay --target sidebar",
    "build:dev": "rm -rf dist && tsc --project tsconfig.build.json && parcel build --target window --target overlay --target sidebar --no-optimize",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'ui/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' 'ui/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{ts,tsx,scss,json,md}'",
    "format:check": "prettier --check '**/*.{ts,tsx,scss,json,md}'",
    "package": "make package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "author": "IINA Plugin Bookmarks Contributors",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@parcel/config-default": "~2.16.4",
    "@parcel/transformer-sass": "~2.16.4",
    "@playwright/test": "^1.58.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "iina-plugin-definition": "^0.99.3",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "parcel": "~2.16.4",
    "parcel-optimizer-webview": "git+https://github.com/iina/parcel-optimizer-webview.git#18412b22cbf27c6b49bc90b521e02fde80e47806",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "browserslist": "safari >= 14",
  "targets": {
    "main": false,
    "window": {
      "distDir": "./dist/ui/window",
      "source": "ui/window/index.html",
      "publicUrl": "./"
    },
    "overlay": {
      "distDir": "./dist/ui/overlay",
      "source": "ui/overlay/index.html",
      "publicUrl": "./"
    },
    "sidebar": {
      "distDir": "./dist/ui/sidebar",
      "source": "ui/sidebar/index.html",
      "publicUrl": "./"
    }
  }
}
