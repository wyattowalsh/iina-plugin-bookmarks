{
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "types": ["iina-plugin-definition"]
  },
  "include": [
    "src/index-modern.ts",
    "src/bookmark-manager-modern.ts",
    "src/types.ts",
    "src/cloud-storage.ts",
    "src/metadata-detector.ts",
    "src/bookmark-cache.ts",
    "src/performance-utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ui",
    "tests",
    "src/plugin-bundle.ts",
    "src/bookmark-manager.ts",
    "src/global.ts"
  ]
}
