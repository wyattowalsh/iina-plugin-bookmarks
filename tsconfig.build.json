{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "es6",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/index.ts",
    "src/bookmark-manager.ts",
    "src/bookmark-persistence.ts",
    "src/bookmark-import-export.ts",
    "src/cloud-sync-handler.ts",
    "src/types.ts",
    "src/cloud-storage.ts"
  ],
  "exclude": ["node_modules", "dist", "ui", "tests"]
}
